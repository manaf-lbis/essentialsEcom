<html lang="en">
<%- include("../partials/htmlHead.ejs", { csspath: "/css/adminCss/category/category.css" }) %>

    <body>
        <%- include('../partials/adminNavbar.ejs') %>

            <div class="container-fluid wrapper">
                <%- include("../partials/adminLeftsidebar.ejs") %>

                    <div class="mainpanel p-4">
                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h4 class="fw-bold mb-1">Edit Category</h4>
                                <p class="text-muted small mb-0">Update category details</p>
                            </div>
                            <a href="/admin/category" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>

                        <!-- Edit Category Card -->
                        <div class="card border-0 shadow-sm" style="max-width: 800px; margin: 0 auto;">
                            <div class="card-body p-4">

                                <form action="/admin/updateCategory" id="editCategoryForm" method="post"
                                    enctype="multipart/form-data">

                                    <input type="hidden" name="_id" value="<%= dbResult._id %>">

                                    <!-- Category Name -->
                                    <div class="mb-4">
                                        <label for="categoryName" class="form-label fw-bold">Category Name</label>
                                        <input type="text" name="categoryName" class="form-control" id="categoryName"
                                            value="<%= dbResult.categoryName %>" placeholder="e.g., Electronics">
                                        <div class="text-danger small mt-1" id="categoryNameError"></div>
                                    </div>

                                    <!-- Description -->
                                    <div class="mb-4">
                                        <label for="description" class="form-label fw-bold">Description</label>
                                        <textarea name="description" class="form-control" id="description" rows="3"
                                            placeholder="Enter category description..."><%= dbResult.description %></textarea>
                                        <div class="text-danger small mt-1" id="descriptionError"></div>
                                    </div>

                                    <!-- Image Upload (Optional) -->
                                    <!-- Note: If backend supports updating image, needed 'enctype="multipart/form-data"' on form -->
                                    <div class="mb-4">
                                        <label for="categoryImage" class="form-label fw-bold">Category Image
                                            (Optional)</label>
                                        <div class="d-flex align-items-center gap-3">
                                            <!-- Current Image -->
                                            <div class="current-image-container text-center">
                                                <p class="small text-muted mb-1">Current</p>
                                                <img src="/uploads/<%= dbResult.image || 'default-category.png' %>"
                                                    alt="Current Image" class="img-thumbnail"
                                                    style="width: 100px; height: 100px; object-fit: cover;">
                                            </div>

                                            <!-- New Upload -->
                                            <div class="flex-grow-1">
                                                <input type="file" name="image" class="form-control" id="categoryImage"
                                                    accept="image/jpeg, image/png, image/jpg">
                                                <div class="form-text">Leave empty to keep current image.</div>
                                            </div>
                                        </div>
                                        <!-- Preview Container -->
                                        <div id="imagePreviewContainer" class="mt-3 d-none">
                                            <p class="small text-muted mb-1">New Preview</p>
                                            <img id="imagePreview" src="#" alt="Preview" class="img-thumbnail"
                                                style="max-height: 150px;">
                                        </div>
                                        <div class="text-danger small mt-1" id="imageError"></div>
                                    </div>

                                    <!-- Actions -->
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <button type="button" class="btn btn-light me-md-2"
                                            onclick="window.location.href='/admin/category'">Cancel</button>
                                        <button type="submit" class="btn btn-primary px-4">Update Category</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script src="/js/adminjs/editCategory.js"></script>

            <!-- Inline script for showing SweetAlert -->
            <% if (typeof alert !=='undefined' && alert.trim() !=='' ) { %>
                <script>
                    callSweetAlert('<%= alert %>');
                </script>
                <% } %>

    </body>

</html>