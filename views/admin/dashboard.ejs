<html lang="en">
<link rel="stylesheet" href="/css/adminCss/dashboard/dashboardMainpanel.css">
<%- include('../partials/htmlHead.ejs',{csspath:"/css/adminCss/dashboard/dashboard.css"}) %>


  <body>
    <%- include('../partials/adminNavbar.ejs') %>

      <div class="container-fluid wrapper">
        <!-- left side bar -->
        <%- include("../partials/adminLeftsidebar.ejs") %>

          <div class="mainpanel">
            <div
              class="dashboard-header p-4 bg-white shadow-sm d-flex justify-content-between align-items-center sticky-top"
              style="z-index: 1000;">
              <div>
                <h4 class="fw-bold mb-0 text-dark">Business Intelligence Dashboard</h4>
                <p class="text-muted small mb-0">Analytics & Insights for Smart Choice Electronics</p>
              </div>
              <div class="d-flex gap-2 align-items-center">
                <div class="input-group input-group-sm">
                  <span class="input-group-text bg-light border-0">From</span>
                  <input type="date" id="startDate" class="form-control border-0 bg-light">
                  <span class="input-group-text bg-light border-0">To</span>
                  <input type="date" id="endDate" class="form-control border-0 bg-light">
                </div>
                <select class="form-select form-select-sm border-0 bg-light fw-bold text-primary" id="reportDuration"
                  style="width: auto;">
                  <option value="1day">Today</option>
                  <option value="1week">This Week</option>
                  <option value="1month">This Month</option>
                  <option value="custom">Custom</option>
                </select>
                <button class="btn btn-primary btn-sm px-3 fw-bold shadow-sm"
                  onclick="applyCustomRange()">Analyze</button>
              </div>
            </div>

            <div class="p-4 bg-light min-vh-100">
              <!-- KPI Section -->
              <!-- KPI Section -->
              <div class="row g-3 mb-4">
                <!-- Row 1 -->
                <div class="col-xl-3 col-md-6">
                  <div class="card border-0 shadow-sm h-100 kpi-card bg-white">
                    <div class="card-body p-3 d-flex align-items-center">
                      <div class="flex-shrink-0 me-3 bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                        <i class="fas fa-coins fa-lg"></i>
                      </div>
                      <div>
                        <p class="text-muted small fw-bold mb-0 text-uppercase">Total Revenue</p>
                        <h4 id="orderAmount" class="fw-bold mb-0 mt-1 text-dark">₹<%= totalAmount.toLocaleString() %>
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xl-3 col-md-6">
                  <div class="card border-0 shadow-sm h-100 kpi-card bg-white">
                    <div class="card-body p-3 d-flex align-items-center">
                      <div class="flex-shrink-0 me-3 bg-success bg-opacity-10 p-3 rounded-circle text-success">
                        <i class="fas fa-shopping-cart fa-lg"></i>
                      </div>
                      <div>
                        <p class="text-muted small fw-bold mb-0 text-uppercase">Total Orders</p>
                        <h4 id="salesCount" class="fw-bold mb-0 mt-1 text-dark">
                          <%= salesCount %>
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xl-3 col-md-6">
                  <div class="card border-0 shadow-sm h-100 kpi-card bg-white">
                    <div class="card-body p-3 d-flex align-items-center">
                      <div class="flex-shrink-0 me-3 bg-info bg-opacity-10 p-3 rounded-circle text-info">
                        <i class="fas fa-user-friends fa-lg"></i>
                      </div>
                      <div>
                        <p class="text-muted small fw-bold mb-0 text-uppercase">Total Customers</p>
                        <h4 id="customers" class="fw-bold mb-0 mt-1 text-dark">
                          <%= totalCustomers %>
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xl-3 col-md-6">
                  <div class="card border-0 shadow-sm h-100 kpi-card bg-white">
                    <div class="card-body p-3 d-flex align-items-center">
                      <div class="flex-shrink-0 me-3 bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                        <i class="fas fa-box-open fa-lg"></i>
                      </div>
                      <div>
                        <p class="text-muted small fw-bold mb-0 text-uppercase">Active Orders</p>
                        <h4 id="activeOrders" class="fw-bold mb-0 mt-1 text-dark">
                          <%= activeOrdersCount %>
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Row 2 -->
                <div class="col-xl-3 col-md-6">
                  <div class="card border-0 shadow-sm h-100 kpi-card bg-white">
                    <div class="card-body p-3 d-flex align-items-center">
                      <div class="flex-shrink-0 me-3 bg-secondary bg-opacity-10 p-3 rounded-circle text-secondary">
                        <i class="fas fa-chart-pie fa-lg"></i>
                      </div>
                      <div>
                        <p class="text-muted small fw-bold mb-0 text-uppercase">Avg. Order Value</p>
                        <h4 id="aov" class="fw-bold mb-0 mt-1 text-dark">₹<%=
                            Math.round(averageOrderValue).toLocaleString() %>
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xl-3 col-md-6">
                  <div class="card border-0 shadow-sm h-100 kpi-card bg-white">
                    <div class="card-body p-3 d-flex align-items-center">
                      <div class="flex-shrink-0 me-3 bg-danger bg-opacity-10 p-3 rounded-circle text-danger">
                        <i class="fas fa-undo fa-lg"></i>
                      </div>
                      <div>
                        <p class="text-muted small fw-bold mb-0 text-uppercase">Returns</p>
                        <h4 id="returns" class="fw-bold mb-0 mt-1 text-dark">
                          <%= returnedCount %>
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xl-3 col-md-6">
                  <div class="card border-0 shadow-sm h-100 kpi-card bg-white">
                    <div class="card-body p-3 d-flex align-items-center">
                      <div class="flex-shrink-0 me-3 bg-dark bg-opacity-10 p-3 rounded-circle text-dark">
                        <i class="fas fa-ban fa-lg"></i>
                      </div>
                      <div>
                        <p class="text-muted small fw-bold mb-0 text-uppercase">Cancelled</p>
                        <h4 id="cancelled" class="fw-bold mb-0 mt-1 text-dark">
                          <%= cancelledCount %>
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xl-3 col-md-6">
                  <div class="card border-0 shadow-sm h-100 kpi-card bg-white">
                    <div class="card-body p-3 d-flex align-items-center">
                      <div class="flex-shrink-0 me-3 bg-success bg-opacity-10 p-3 rounded-circle text-success"
                        style="--bs-bg-opacity: .2;">
                        <i class="fas fa-chart-line fa-lg"></i>
                      </div>
                      <div>
                        <p class="text-muted small fw-bold mb-0 text-uppercase">Performance</p>
                        <h4 id="performance" class="fw-bold mb-0 mt-1 text-dark">
                          <%= successRate.toFixed(1) %>%
                        </h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Main Analytics Section -->
              <div class="row g-4 mb-4">
                <div class="col-lg-8">
                  <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white p-3 border-0 d-flex justify-content-between align-items-center">
                      <h6 class="fw-bold mb-0">Sales Analytics Over Time</h6>
                      <div class="dropdown">
                        <button class="btn btn-light btn-sm dropdown-toggle border-0" type="button"
                          data-bs-toggle="dropdown">Export</button>
                        <ul class="dropdown-menu shadow border-0">
                          <li><a class="dropdown-item small" href="#" onclick="downloadExcel()">Excel (.xlsx)</a></li>
                          <li><a class="dropdown-item small" href="#" onclick="downloadPDF()">PDF Report</a></li>
                        </ul>
                      </div>
                    </div>
                    <div class="card-body p-4">
                      <div class="chart-container" style="position: relative; height: 350px;">
                        <canvas id="graph1"></canvas>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white p-3 border-0">
                      <h6 class="fw-bold mb-0">Category Contribution</h6>
                    </div>
                    <div class="card-body p-4 d-flex align-items-center justify-content-center">
                      <div class="chart-container" style="position: relative; height: 300px; width: 100%;">
                        <canvas id="graph2"></canvas>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Data Tables Section -->
              <div class="row g-4">
                <div class="col-xl-8">
                  <div class="card border-0 shadow-sm overflow-hidden">
                    <div class="card-header bg-white p-3 border-0">
                      <h6 class="fw-bold mb-0">Recent Transactions</h6>
                    </div>
                    <div class="table-responsive p-0">
                      <table class="table table-hover align-middle mb-0" id="recentOrdersTable">
                        <thead class="bg-light text-muted small">
                          <tr>
                            <th class="ps-4 border-0">Customer</th>
                            <th class="border-0">Product (Main)</th>
                            <th class="border-0">Amount</th>
                            <th class="border-0">Status</th>
                            <th class="pe-4 text-end border-0">Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% recentOrders.forEach(order=> { %>
                            <tr>
                              <td class="ps-4 border-0">
                                <span class="fw-bold text-dark d-block">
                                  <%= order.userName || 'Guest' %>
                                </span>
                                <span class="text-muted extra-small">
                                  <%= order.paymentId || 'N/A' %>
                                </span>
                              </td>
                              <td class="border-0">
                                <span class="text-truncate d-inline-block" style="max-width: 150px;">
                                  <%= order.orderItems[0]?.productId?.productName || 'N/A' %>
                                </span>
                                <% if(order.orderItems.length> 1) { %><span class="badge bg-light text-dark small">+<%=
                                      order.orderItems.length-1 %></span>
                                  <% } %>
                              </td>
                              <td class="border-0 fw-bold">₹<%= order.finalPrice.toLocaleString() %>
                              </td>
                              <td class="border-0">
                                <span class="badge rounded-pill 
                                  <%= (order.status || 'Pending') === 'Delivered' ? 'bg-success-subtle text-success' : 
                                      (order.status || 'Pending') === 'Cancelled' ? 'bg-danger-subtle text-danger' : 
                                      (order.status || 'Pending') === 'Returned' ? 'bg-danger-subtle text-danger' :
                                      (order.status || 'Pending') === 'Shipped' ? 'bg-info-subtle text-info' :
                                      'bg-primary-subtle text-primary' %> px-3">
                                  <%= order.status || 'Pending' %>
                                </span>
                              </td>
                              <td class="pe-4 text-end border-0 text-muted small">
                                <%= new Date(order.orderDate).toLocaleDateString() %>
                              </td>
                            </tr>
                            <% }) %>
                        </tbody>
                      </table>
                    </div>
                    <div class="card-footer bg-white border-0 text-center p-3">
                      <a href="/admin/orders" class="text-primary fw-bold small text-decoration-none">View All
                        Transactions <i class="fas fa-chevron-right ms-1"></i></a>
                    </div>
                  </div>
                </div>

                <div class="col-xl-4">
                  <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white p-3 border-0">
                      <h6 class="fw-bold mb-0">Top Brands Performance</h6>
                    </div>
                    <div class="card-body p-4">
                      <div class="chart-container" style="position: relative; height: 320px;">
                        <canvas id="graph3"></canvas>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>


      </div>

      </div>



      <!-- chart js -->
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
      <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
      <!-- external js -->
      <script src="/js/adminjs/dashboard.js"></script>
      <script src="/js/adminjs/dashboardGraph.js"></script>
  </body>

</html>