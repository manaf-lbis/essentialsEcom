<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/htmlHead.ejs", { csspath: "/css/adminCss/productmanagement/productmanagement.css" })%>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <style>
            .product-table {
                background: white;
                border-radius: 12px;
                overflow: hidden;
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            }

            .product-table th {
                font-weight: 600;
                color: #64748b;
                text-transform: uppercase;
                font-size: 0.75rem;
                letter-spacing: 0.05em;
                background-color: #f8fafc;
                border-bottom: 1px solid #e2e8f0;
                padding: 1rem;
            }

            .product-table td {
                vertical-align: middle;
                padding: 0.75rem 1rem;
                border-bottom: 1px solid #f1f5f9;
                color: #334155;
                font-size: 0.9rem;
            }

            .product-img-thumbnail {
                width: 48px;
                height: 48px;
                object-fit: cover;
                border-radius: 8px;
                border: 1px solid #e2e8f0;
            }

            .status-badge {
                padding: 4px 12px;
                border-radius: 99px;
                font-size: 0.75rem;
                font-weight: 600;
                display: inline-flex;
                align-items: center;
                gap: 4px;
            }

            .status-active {
                background-color: #dcfce7;
                color: #166534;
            }

            .status-blocked {
                background-color: #fee2e2;
                color: #991b1b;
            }

            .action-btn {
                width: 32px;
                height: 32px;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                border-radius: 6px;
                transition: all 0.2s;
                margin: 0 2px;
                border: none;
                cursor: pointer;
            }

            .btn-edit {
                background-color: #eff6ff;
                color: #3b82f6;
            }

            .btn-edit:hover {
                background-color: #dbeafe;
                color: #2563eb;
            }

            .btn-block {
                background-color: #fee2e2;
                color: #ef4444;
            }

            .btn-block:hover {
                background-color: #fecaca;
            }

            .btn-unblock {
                background-color: #dcfce7;
                color: #16a34a;
            }

            .btn-unblock:hover {
                background-color: #bbf7d0;
            }

            .search-box {
                position: relative;
                max-width: 300px;
            }

            .search-box i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: #94a3b8;
            }

            .search-box input {
                padding-left: 38px;
                border-radius: 8px;
                border-color: #e2e8f0;
                font-size: 0.9rem;
            }

            .search-box input:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.1);
            }
        </style>
</head>

<body class="bg-light">

    <%- include('../partials/adminNavbar.ejs')%>

        <div class="container-fluid wrapper">
            <%- include("../partials/adminLeftsidebar.ejs")%>

                <div class="mainpanel p-4">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h4 class="fw-bold mb-1">Product Management</h4>
                            <p class="text-muted small mb-0">Manage inventory, pricing, and availability</p>
                        </div>
                        <a href="/admin/addProduct" class="btn btn-primary fw-bold shadow-sm">
                            <i class="fas fa-plus me-2"></i>Add Product
                        </a>
                    </div>

                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-3 d-flex justify-content-between align-items-center gap-3">
                            <form class="d-flex w-100" role="search" method="get" action="/admin/products/">
                                <div class="search-box flex-grow-1">
                                    <i class="fas fa-search"></i>
                                    <input class="form-control" name="search" type="search"
                                        placeholder="Search by name, brand..." value="<%= searchQuery%>">
                                </div>
                                <button class="btn btn-dark ms-2 fw-bold" type="submit">Search</button>
                            </form>
                        </div>
                    </div>

                    <div class="product-table mb-4">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 35%;">Product</th>
                                        <th>Brand</th>
                                        <th>Stock</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%if(products && products.length> 0) {%>
                                        <%for(let product of products){%>
                                            <tr id="row-<%= product._id%>">
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="<%= product.productImage[0] || '/assets/images/placeholder.png'%>"
                                                            class="product-img-thumbnail me-3 shadow-sm" alt="Product">
                                                        <div>
                                                            <div class="fw-bold text-dark text-truncate"
                                                                style="max-width: 250px;"
                                                                title="<%= product.productName%>">
                                                                <%= product.productName%>
                                                            </div>
                                                            <div class="text-muted small">
                                                                <%= product.category ? product.category.categoryName
                                                                    : 'Uncategorized'%>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-light text-dark border">
                                                        <%= product.brand%>
                                                    </span></td>
                                                <td>
                                                    <%if(product.quantity < 10) {%>
                                                        <span class="text-danger fw-bold"><i
                                                                class="fas fa-exclamation-circle me-1"></i>
                                                            <%= product.quantity%>
                                                        </span>
                                                        <%} else {%>
                                                            <span class="text-success fw-bold">
                                                                <%= product.quantity%>
                                                            </span>
                                                            <%}%>
                                                </td>
                                                <td class="fw-bold fs-6">â‚¹<%= product.sellingPrice%>
                                                </td>
                                                <td id="status-cell-<%= product._id%>">
                                                    <%if(!product.isBlocked){%>
                                                        <span class="status-badge status-active"><i
                                                                class="fas fa-check-circle"></i> Active</span>
                                                        <%} else {%>
                                                            <span class="status-badge status-blocked"><i
                                                                    class="fas fa-ban"></i> Blocked</span>
                                                            <%}%>
                                                </td>
                                                <td class="text-end">
                                                    <a href="/admin/editProduct/<%=product._id%>"
                                                        class="action-btn btn-edit" title="Edit">
                                                        <i class="fas fa-pen"></i>
                                                    </a>

                                                    <%if(!product.isBlocked){%>
                                                        <button class="action-btn btn-block"
                                                            id="btn-status-<%= product._id%>"
                                                            onclick="toggleProductStatus('<%=product._id%>', 'block')"
                                                            title="Block/Delete">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                        <%} else {%>
                                                            <button class="action-btn btn-unblock"
                                                                id="btn-status-<%= product._id%>"
                                                                onclick="toggleProductStatus('<%=product._id%>', 'unblock')"
                                                                title="Restore">
                                                                <i class="fas fa-undo"></i>
                                                            </button>
                                                            <%}%>
                                                </td>
                                            </tr>
                                            <%}%>
                                                <%} else {%>
                                                    <tr>
                                                        <td colspan="6" class="text-center py-5">
                                                            <div class="text-muted">
                                                                <i
                                                                    class="fas fa-box-open fa-3x mb-3 text-secondary op-50"></i>
                                                                <p class="mb-0">No products found matching your search.
                                                                </p>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <%}%>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <%if(totalPages> 1) {%>
                        <nav aria-label="Page navigation" class="d-flex justify-content-center mt-4">
                            <ul class="pagination">
                                <li class="page-item <%= currentPage <= 1 ? 'disabled' : ''%>">
                                    <a class="page-link"
                                        href="/admin/products/?pageReq=<%=currentPage-1%>&search=<%=searchQuery%>">Previous</a>
                                </li>

                                <%for(let i=1; i<=totalPages; i++) {%>
                                    <li class="page-item <%= currentPage == i ? 'active' : ''%>">
                                        <a class="page-link"
                                            href="/admin/products/?pageReq=<%=i%>&search=<%=searchQuery%>">
                                            <%= i%>
                                        </a>
                                    </li>
                                    <%}%>

                                        <li class="page-item <%= currentPage >= totalPages ? 'disabled' : ''%>">
                                            <a class="page-link"
                                                href="/admin/products/?pageReq=<%=currentPage+1%>&search=<%=searchQuery%>">Next</a>
                                        </li>
                            </ul>
                        </nav>
                        <%}%>

                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            async function toggleProductStatus(id, action) {
                const isBlock = action === 'block';
                const title = isBlock ? 'Block Product?' : 'Restore Product?';
                const text = isBlock ? 'This will hide the product from users.' : 'This will make the product visible again.';
                const confirmBtnColor = isBlock ? '#d33' : '#16a34a';

                const result = await Swal.fire({
                    title: title,
                    text: text,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: confirmBtnColor,
                    confirmButtonText: isBlock ? 'Yes, Block it!' : 'Yes, Restore it!'
                });

                if (result.isConfirmed) {
                    try {
                        const url = isBlock ? `/admin/blockProduct/${id}` : `/admin/unblockProduct/${id}`;
                        const response = await fetch(url, { method: 'POST' });
                        const data = await response.json();

                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: isBlock ? 'Blocked!' : 'Restored!',
                                text: data.message,
                                timer: 1500,
                                showConfirmButton: false
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            throw new Error(data.message);
                        }
                    } catch (error) {
                        Swal.fire('Error', error.message || 'Action failed', 'error');
                    }
                }
            }
        </script>
</body>

</html>