<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Catamaran:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/userCss/loginPage/login.css">
</head>
<body>

<div class="container">

    <!-- logo -->
    <div class="leftSection"> 
        
            <img src="/assets/images/logo.png" alt="">
            <h4>smart choice for smart living</h4>
    </div>
             
    <!-- form -->
    <div class="rightSection rounded-3">
           <div class="m-4">
            <h3 class="py-3 pb-1">Create Account</h3>
            <div class="errorStyle pt-1 "><%= message %></div>
        
            <form id="form" action="/signup" method="post">
                
                <label for="exampleFormControlInput1" class="form-label">Full Name</label>
                <input type="text"  name="name" class="form-control" id="nameField" placeholder="First name and last name" >
                <div id="nameerr" class="errorStyle"></div>
                
                <label for="exampleFormControlInput1" class="form-label pt-3">Email</label>
                <input type="" name="email" class="form-control" id="emailField" placeholder="name@example.com" >
                <div id="emailerr" class="errorStyle"></div>
                
                <label for="exampleFormControlInput1" class="form-label pt-3">Mobile number</label>
                <input type="text" name="phone" class="form-control" id="phoneField" placeholder="10 digit mobile number" >
                <div id="phoneerr" class="errorStyle"></div>
                
                <label for="exampleFormControlInput1" class="form-label pt-3">Password</label>
                <input type="password" name="password" class="form-control" id="passwordField" placeholder="minimum 8 digit" >
                <div id="passworderr" class="errorStyle"></div>
                
                <button type="submit" class="btn btn-primary mt-3  w-100">Continue</button>
                 
            </form>    
            </div>

            <div class="separator">
                <span>OR</span>
            </div>

            <div class="googleLogin">
                <div>
                    <img class="googleimg" src="/assets/images/google.webp" alt="">
                    <span><a href="/auth/google">Continue with google</a></span>
                </div>   
            </div>
            <div class="existingUser mb-3">
                <div>
                    <span>Existing user?</span>
                    <a href="/">Login</a>
                </div>
            </div>
            
              

            
    </div>
</div>

    
   
   
   <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <script src="/js/userjs/signup.js"></script>
</body>
</html>