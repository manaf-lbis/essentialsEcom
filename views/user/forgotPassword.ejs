<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Recovery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Catamaran:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/userCss/loginPage/login.css">
</head>

<body>

    <div class="container">

        <!-- logo -->
        <div class="leftSection">
            <div></div>
            <img src="/assets/images/logo.png" alt="">
        </div>

        <!-- form -->
        <div class="rightSection rounded-3">
            <div class="m-4 ">
                <div id="topSection" >
                    <h3 class="pt-3 ">Account Recovery</h3>
                    <p>A text with a One Time Password (OTP) has been sent to your mobile number</p>

                    <form>

                        <% if (typeof message !=='undefined' ) { %>
                            <div id="nameerr" class="errorStyle">
                                <%= message %>
                            </div>
                            <% } %>
                                <div id="nameerr1" class="errorStyle"></div>

                                <label for="exampleFormControlInput1" class="form-label">Registred Email</label>
                                <input type="email" name="email" class="form-control" id="email"
                                    placeholder="Enter your Registred email address" required>
                                <button type="button" id="emailCheck" onclick="checkEmail()"
                                    class="btn btn-primary my-3 w-100">check Email</button>



                                <section id="otpSection" class="mt-3 d-none">
                                    <label for="exampleFormControlInput1" class="form-label">Enter OTP</label>
                                    <input type="password" name="enteredOtp" maxlength="6" class="form-control mt-0"
                                        id="userOtp" placeholder="Enter your OTP" required>

                                    <button type="button" onclick="verifyOtp()"
                                        class="btn btn-primary my-3 w-100">VERIFY OTP</button>

                                    <div class="resend d-flex flex-column justify-content-center ">
                                        <div>
                                            <span>You can resend the OTP in </span><span id="countdown"></span>
                                        </div>
                                        <form>
                                            <button type="button" id="resendBtn"
                                                class="btn btn-link disabled">Resend</button>
                                        </form>

                                    </div>
                                </section>

                    </form>

                </div>

                <section id="passwordSection" class="d-none" >

                    <!-- password entering portion  -->

                    <h3 class="pt-3 ">Enter New Password</h3>
                    <p>Enter a new strong password include ippercase Lowercase Symbol Number</p>
                    <div id="passwordError" class="errorStyle"></div>
                    <form action="">
                        <label for="exampleFormControlInput1" class="form-label">Enter New Password</label>
                                    <input type="text" name="enteredOtp"  class="form-control mt-0"
                                        id="password1" placeholder="New Password" required>

                        <label for="exampleFormControlInput1" class="form-label">Confirm Password</label>
                        <input type="password" name="enteredOtp"  class="form-control mt-0"
                            id="password2" placeholder="Confirm Password" required> 

                            <button type="button" id="" onclick="validate()"
                            class="btn btn-primary my-3 w-100">Confirm Change</button>

                    </form>


                </section>



            </div>



        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="/js/userjs/forgotPassword.js"></script>
</body>

</html>