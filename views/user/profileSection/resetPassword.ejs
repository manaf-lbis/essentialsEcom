<html lang="en">

<%- include('../../partials/htmlHeadUser.ejs',{csspath:'/css/userCss/profile/profile.css'})%>

    <body>

        <%- include('../../partials/userNavbar.ejs')%>

            <div class="profile-container">
                <div class="profile-layout">
                    <%- include('../../partials/userprofile/profileLayoutMinimal.ejs', { activePage: 'resetPassword' })%>

                        <main class="profile-content-card">
                            <div class="mb-4 pb-2 border-bottom">
                                <h5 class="mb-0 fw-bold">Reset Password</h5>
                            </div>

                            <div style="max-width: 600px;">
                                <div class="form-group mb-4">
                                    <label for="existingPassword"
                                        class="form-label small text-muted text-uppercase fw-bold">Current
                                        Password</label>
                                    <input type="password" class="form-control" id="existingPassword"
                                        placeholder="Enter current password">
                                    <small id="existingPasswordErr" class="text-danger"></small>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-6 mb-3">
                                        <label for="newPassword"
                                            class="form-label small text-muted text-uppercase fw-bold">New
                                            Password</label>
                                        <input type="password" class="form-control" id="newPassword"
                                            placeholder="Enter new password">
                                        <small id="confirmPassErr" class="text-danger"></small>
                                    </div>
                                    <div class="form-group col-md-6 mb-3">
                                        <label for="confirmPassword"
                                            class="form-label small text-muted text-uppercase fw-bold">Confirm
                                            Password</label>
                                        <input type="password" class="form-control" id="confirmPassword"
                                            placeholder="Re-enter new password">
                                    </div>
                                </div>

                                <div class="alert alert-light border mt-2 small text-muted">
                                    <i class="fas fa-info-circle me-1"></i> Make sure your password is at least 8
                                    characters long and includes numbers and special characters.
                                </div>

                                <button type="button" id="submitBtn" class="btn btn-primary px-4 mt-3">Update
                                    Password</button>
                            </div>

                        </main>
                </div>
            </div>

            <%- include('../../partials/userFooter.ejs')%>
                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script src="/js/userjs/profileSection/resetPassword.js"></script>

    </body>

</html>