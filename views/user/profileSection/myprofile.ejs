<html lang="en">

<%- include('../../partials/htmlHeadUser.ejs',{csspath:'/css/userCss/profile/profile.css'})%>

    <body>
        <%- include('../../partials/userNavbar.ejs')%>

            <div class="profile-container">

                <script>

                </script>

                <div class="profile-layout">

                    <%- include('../../partials/userprofile/profileLayoutMinimal.ejs', { activePage: 'profile' })%>

                        <main class="profile-content-card">

                            <div class="sidebar-header border-0 pb-0 mb-4">

                                <div class="d-flex align-items-center">
                                    <div class="user-avatar"
                                        style="width: 80px; height: 80px; border-radius: 50%; background: #6c757d; color: white; display: flex; align-items: center; justify-content: center; font-size: 2rem; font-weight: 600; margin-right: 1.5rem;">
                                        <%= userData.name.charAt(0).toUpperCase()%>
                                    </div>
                                    <div>
                                        <h2
                                            style="margin: 0 0 0.5rem 0; font-size: 1.5rem; font-weight: 600; color: #212529;">
                                            <%= userData.name%>
                                        </h2>
                                        <p style="margin: 0; color: #6c757d;">
                                            <%= userData.phone%>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <h3 style="font-size: 1.1rem; font-weight: 600; color: #212529; margin-bottom: 1.5rem;">
                                    Personal Information</h3>

                                <form>
                                    <input id="_id" type="text" value="<%= userData._id%>" name="_id" hidden>

                                    <div class="mb-3">
                                        <label for="name" class="d-block mb-2 fw-medium text-secondary">Full
                                            Name</label>
                                        <span id="nameerr" class="text-danger small d-block"></span>
                                        <input type="text" class="form-control" value="<%= userData.name%>" id="name"
                                            placeholder="Enter your full name" disabled style="padding: 0.65rem 1rem;">
                                    </div>

                                    <div class="mb-3">
                                        <label for="dateOfBirth" class="d-block mb-2 fw-medium text-secondary">Date
                                            of Birth</label>
                                        <span id="doberr" class="text-danger small d-block"></span>
                                        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth"
                                            value="<%= userData.dateOfBirth ? new Date(userData.dateOfBirth).toISOString().split('T')[0] : ''%>"
                                            disabled style="padding: 0.65rem 1rem;">
                                    </div>

                                    <div class="mb-3">
                                        <label class="d-block mb-2 fw-medium text-secondary">Gender</label>
                                        <span id="gendererr" class="text-danger small d-block"></span>
                                        <div class="d-flex gap-4 mt-2">
                                            <div class="d-flex align-items-center">
                                                <input name="gender" id="male" value="male" type="radio"
                                                    <%=userData.gender==="male" ? 'checked' : ''%> disabled
                                                class="me-2">
                                                <label for="male" class="check-label">Male</label>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <input name="gender" id="female" value="female"
                                                    <%=userData.gender==="female" ? 'checked' : ''%> type="radio"
                                                disabled class="me-2">
                                                <label for="female" class="check-label">Female</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="phone" class="d-block mb-2 fw-medium text-secondary">Mobile
                                            Number</label>
                                        <span id="phoneerr" class="text-danger small d-block"></span>
                                        <input type="text" class="form-control" value="<%= userData.phone%>" id="phone"
                                            placeholder="Enter mobile number" disabled style="padding: 0.65rem 1rem;">
                                    </div>

                                    <div class="d-flex gap-2 mt-4">
                                        <button type="button" onclick="getEdit()" id="editBtn"
                                            class="btn btn-primary px-4">
                                            Edit Profile
                                        </button>
                                        <a href="/logout" class="btn btn-outline-danger px-4">
                                            Sign Out
                                        </a>
                                        <button type="button" id="submitBtn" class="btn btn-success px-4" hidden>
                                            Save Changes
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </main>
                </div>
            </div>

            <%- include('../../partials/userFooter.ejs')%>
                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script src="/js/userjs/profileSection/myProfile.js"></script>

    </body>

</html>